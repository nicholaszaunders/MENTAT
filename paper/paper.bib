	journal = {Journal of Optical Communications and Networking},
	author = {Rahmouni, A. and Kuo, P. S. and Li-Baboud, Y. S. and Burenkov, I. A. and Shi, Y. and Jabir, M. V. and Lal, N. and Reddy, D. and Merzouki, M. and Ma, L. and Battou, A. and Polyakov, S. V. and Slattery, O. and Gerrits, T.},
